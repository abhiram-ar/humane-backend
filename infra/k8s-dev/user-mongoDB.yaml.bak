apiVersion: apps/v1
kind: Deployment
metadata:
  name: user-mongo-depl
spec:
  selector:
    matchLabels:
      app: humane
      service: user
      type: db
  template:
    metadata:
      labels:
        app: humane
        service: user
        type: db
    spec:
      containers:
      - name: user-mongo
        image: mongo
        volumeMounts:
        - name: user-mongo-storage
          mountPath: /data/db 
        resources:
          requests:
            memory: "256Mi"
            cpu: "250m"
          limits:
            memory: "512Mi"
            cpu: "500m"
      volumes: 
      - name: user-mongo-storage
        persistentVolumeClaim: 
          claimName: user-mongo-pvc
---
apiVersion: v1
kind: Service
metadata:
  name: user-mongo-srv
spec:
  selector:
    app: humane
    service: user
    type: db
  ports:
  - name: db
    protocol: TCP
    port: 27017
    targetPort: 27017
