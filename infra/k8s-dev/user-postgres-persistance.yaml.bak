apiVersion: v1
kind: PersistentVolume
metadata:
  name: user-postgres-pv
  labels:
    type: local
    app: postgres
spec:
  storageClassName: manual
  capacity:
    storage: 2Gi
  accessModes:
    - ReadWriteOnce
  hostPath:
    path: /home/abhiram/Bootcamp/week-23-to-27/humane/backend/data/user-postgres-sql
  # reference the auto-created PVC name (StatefulSet-name-0)
  claimRef:
    name: user-postgres-storage-user-postgres-sts-0