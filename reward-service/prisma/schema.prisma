generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URI")
}

model HumaneScore {
  userId  String    @id
  score   Int       @default(0)
  Rewards Rewards[] @relation("Rewards")
}

model Rewards {
  actorId        String
  type           RewardType
  idempotencyKey String     @id
  pointsRewarded Int
  createdAt      DateTime   @default(now())

  HumaneScore HumaneScore @relation("Rewards", fields: [actorId], references: [userId], onDelete: Cascade)

  @@index([actorId, idempotencyKey])
}

enum RewardType {
  HELPFUL_COMMENT
  CHAT_DAILY_CHECKIN
}

model OutBox {
  id         String   @id
  topic      String
  eventType  String
  event      String
  createdAt  DateTime
  retryCount Int      @default(0)
  retryAfter DateTime

  @@index([createdAt])
}
